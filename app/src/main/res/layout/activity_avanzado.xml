<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66BB6A">

    <!-- Barra superior -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2E7D32"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTituloIntermedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avanzado"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ITEM TEMPLATE -->
            <LinearLayout
                android:id="@+id/itemPreposiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvPreposiciones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Preposiciones"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgPreposiciones"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Preposiciones"
                    android:src="@drawable/prepo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemConectoresTemporales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvConectoresTemporales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Conectores Temporales"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgConectoresTemporales"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Conectores Temporales"
                    android:src="@drawable/conectores" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemAdverbios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvAdverbios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adverbios"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgAdverbios"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Adverbios"
                    android:src="@drawable/adverbios" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemComparacionesConectores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvComparacionesConectores"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comparaciones y conectores"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgComparacionesConectores"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Comparaciones y conectores"
                    android:src="@drawable/compycon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemMedioAmbiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvMedioAmbiente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Medio Ambiente"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgMedioAmbiente"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Medio Ambiente"
                    android:src="@drawable/medioambiente" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemNoticiasEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvNoticiasEventos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Noticias y eventos"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgNoticiasEventos"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Noticias y eventos"
                    android:src="@drawable/noticias" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textStyle="bold"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior -->
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#1B5E20">

        <!-- Diccionario -->
        <LinearLayout
            android:id="@+id/navDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diccionario"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/navProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/progreso"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Mi perfil -->
        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
