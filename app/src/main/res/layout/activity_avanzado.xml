<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".Avanzado">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avanzado"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp" />

    <!-- Botones principales -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPreposiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preposiciones"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnConectoresTemporales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectores temporales"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnAdverbios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adverbios"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnComparaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comparaciones y conectores"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnMedioAmbiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medio ambiente"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noticias y eventos"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btnPolitica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Política"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botón Regresar -->
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"
        android:layout_marginVertical="10dp" />

    <!-- Barra inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:gravity="center">

        <Button
            android:id="@+id/btnDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Diccionario"
            android:textColor="@android:color/white"
            android:background="#00000000" />

        <Button
            android:id="@+id/btnProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Progreso"
            android:textColor="@android:color/white"
            android:background="#00423C3C" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mi perfil"
            android:textColor="@android:color/white"
            android:background="#00000000" />
    </LinearLayout>

</LinearLayout>
