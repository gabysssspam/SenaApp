<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".Introduccion">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introducción"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"/>

    <!-- Botones principales -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAbecedario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abecedario"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colores"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnNumeros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Números"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnAlimentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alimentos"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnAnimales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animales"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnCuerpo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuerpo"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

            <Button
                android:id="@+id/btnVestimenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vestimenta"
                android:backgroundTint="@android:color/white"
                android:textColor="#000"
                android:layout_marginVertical="6dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:backgroundTint="#2E7D32"
        android:textColor="@android:color/white"
        android:layout_marginVertical="10dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:gravity="center">

        <Button
            android:id="@+id/btnDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Diccionario"
            android:textColor="@android:color/white"
            android:background="#00000000"/>

        <Button
            android:id="@+id/btnProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Progreso"
            android:textColor="@android:color/white"
            android:background="#00423C3C"/>

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mi perfil"
            android:textColor="@android:color/white"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>
