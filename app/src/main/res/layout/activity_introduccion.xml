<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66BB6A">

    <!-- Barra superior -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#43A047"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvTituloBasico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Introducción"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- TEMPLATE DE ITEM -->
            <!-- Abecedario -->
            <LinearLayout
                android:id="@+id/itemFamilia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvFamilia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Abecedario"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/abcdario" />
            </LinearLayout>

            <!-- Colores -->
            <LinearLayout
                android:id="@+id/itemPronombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvPronombres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Colores"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/colores" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvTiempo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Numeros"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgTiempo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Tiempo"
                    android:src="@drawable/numeros" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemSaludos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvSaludos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alimentos"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgSaludos"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Alimentos"
                    android:src="@drawable/alimentos" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemPalabrasBasicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvPalabrasBasicas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Animales"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgPalabrasBasicas"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Animales"
                    android:src="@drawable/animales" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemVerbos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvVerbos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cuerpo"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgVerbos"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Cuerpo"
                    android:src="@drawable/cuerpos" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemEmociones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvEmociones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vestimenta"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEmociones"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Icono Vestimenta"
                    android:src="@drawable/vestimenta" />
            </LinearLayout>




            <!-- Repite mismo patrón para los demás -->
            <!-- Números -->
            <!-- Alimentos -->
            <!-- Animales -->
            <!-- Cuerpo -->
            <!-- Vestimenta -->

            <!-- Botón regresar -->
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:text="Regresar"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#2E7D32" />

        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior -->
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#1B5E20">

        <!-- Diccionario -->
        <LinearLayout
            android:id="@+id/navDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diccionario"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/navProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/progreso"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Mi perfil -->
        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

