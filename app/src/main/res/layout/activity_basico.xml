<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#43A047">

    <!-- Barra superior -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Título centrado -->
        <TextView
            android:id="@+id/tvTituloBasico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basico"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FAMILIA -->
            <LinearLayout
                android:id="@+id/itemFamilia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvFamilia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Familia"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgFamilia"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Familia"
                    android:src="@drawable/familia"/>
            </LinearLayout>

            <!-- PRONOMBRES -->
            <LinearLayout
                android:id="@+id/itemPronombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvPronombres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pronombres"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgPronombres"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Pronombres"
                    android:src="@drawable/pronombres"/>
            </LinearLayout>

            <!-- SEMANA / MES / AÑO -->
            <LinearLayout
                android:id="@+id/itemTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvTiempo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Semana/Mes/Año"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgTiempo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Calendario"
                    android:src="@drawable/calendario"/>
            </LinearLayout>

            <!-- SALUDOS -->
            <LinearLayout
                android:id="@+id/itemSaludos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvSaludos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Saludos"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgSaludos"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Saludos"
                    android:src="@drawable/saludos"/>
            </LinearLayout>

            <!-- PALABRAS BÁSICAS -->
            <LinearLayout
                android:id="@+id/itemPalabrasBasicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvPalabrasBasicas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Palabras basicas"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgPalabrasBasicas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Palabras Básicas"
                    android:src="@drawable/palabritasbas"/>
            </LinearLayout>

            <!-- VERBOS -->
            <LinearLayout
                android:id="@+id/itemVerbos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvVerbos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Verbos"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgVerbos"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Verbos"
                    android:src="@drawable/verbos"/>
            </LinearLayout>

            <!-- EMOCIONES Y SENTIMIENTOS -->
            <LinearLayout
                android:id="@+id/itemEmociones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvEmociones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Emociones y\nSentimientos"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEmociones"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Icono Emociones"
                    android:src="@drawable/emoysenti"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#0A1F28">

        <!-- Diccionario -->
        <LinearLayout
            android:id="@+id/navDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navDiccionarioIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Diccionario"
                android:src="@drawable/diccionario"/>

            <TextView
                android:id="@+id/navDiccionarioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/navProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navProgresoIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Progreso"
                android:src="@drawable/progreso" />

            <TextView
                android:id="@+id/navProgresoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Mi perfil -->
        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navPerfilIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Mi perfil"
                android:src="@drawable/perfil"/>

            <TextView
                android:id="@+id/navPerfilText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

