<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#43A047">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_settings" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_perfil" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Pepito Sánchez"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Nivel 1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/layoutProgreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/iconProgreso"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_progreso" />

                <TextView
                    android:id="@+id/tvMiProgreso"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mi Progreso"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Síguenos en X"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#000000" />

            <TextView
                android:id="@+id/btnInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Síguenos en Instagram"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#E1306C" />

            <TextView
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="Síguenos en Facebook"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#1877F2" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#0A1F28">

        <LinearLayout
            android:id="@+id/navDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navDiccionarioIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diccionario" />

            <TextView
                android:id="@+id/navDiccionarioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navProgresoIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/progreso" />

            <TextView
                android:id="@+id/navProgresoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navPerfilIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil" />

            <TextView
                android:id="@+id/navPerfilText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
