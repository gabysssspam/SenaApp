<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- ===== BARRA SUPERIOR ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2E7D32"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuestionarios"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- ===== CONTENIDO ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E8F5E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TEXTO DESCRIPTIVO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona el nivel de dificultad"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <!-- BOTÓN -->
            <LinearLayout
                android:id="@+id/btnCuestionarioFacil"
                style="@style/CardBoton">

                <TextView
                    style="@style/CardTexto"
                    android:text="Cuestionario Fácil"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCuestionarioIntermedio"
                style="@style/CardBoton">

                <TextView
                    style="@style/CardTexto"
                    android:text="Cuestionario Intermedio"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCuestionarioDificil"
                style="@style/CardBoton">

                <TextView
                    style="@style/CardTexto"
                    android:text="Cuestionario Difícil"/>
            </LinearLayout>

            <!-- REGRESAR -->
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textSize="15sp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

    <!-- ===== BARRA INFERIOR ===== -->
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#1B5E20">

        <!-- Diccionario -->
        <LinearLayout
            android:id="@+id/navDiccionario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diccionario"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/navProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/progreso"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Mi perfil -->
        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
